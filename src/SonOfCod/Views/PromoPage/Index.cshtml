@model IEnumerable<SonOfCod.Models.Promotion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <h2>Thank you for interested in Son Of Cod Promotion</h2>
    <br /><br />
    <h3></h3>
    <table class="table">
        <tr>
            <th>
                <div class="jumbotron">
                    <h2>@Html.ActionLink("Subscribe our Newsletter", "Index", "Subscription")</h2>
                </div>   
</th>
            <th></th>
        </tr>


        @if (Model.Any())
        {

            @foreach (var listPromotion in Model)
                {
                <tr>
                    <td>
                        <strong>@Html.DisplayFor(modelPromotion => listPromotion.Title)</strong>
                        <br />
                        <img src="@listPromotion.Image_url" alt="@listPromotion.Title" />
                        <br />
                        @Html.DisplayFor(modelPromotion => listPromotion.Description)
                        <br />
                    </td>
                </tr>
            }

        }
        else
        {
            <tr>No Promotion have been added yet!</tr>

        }
    </table>

    <br /><br />

    @Html.ActionLink("Main page", "Index", "Admin")
</div>


