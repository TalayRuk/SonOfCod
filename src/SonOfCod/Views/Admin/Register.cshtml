@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @using SonOfCod.ViewModels
    @model RegisterViewModel

    <h2>Register a new Admin</h2>
    <hr />
    <h4>**Note** Password requires at least 6 characters, a capital letter, a digit, and a special character.</h4>
    <br /><br />
    @using (Html.BeginForm("Register", "Admin", FormMethod.Post))
    {
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email)
        <br /><br />
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password)
        <br /><br />
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword)
        <br /><br />
        <input type="submit" value="Register" class="btn btn-primary" />
    }
</div>